<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="26dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_email"
                    style="@style/TextLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <EditText
                        android:id="@+id/log_in_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="6dp"
                        android:drawableRight="@drawable/ic_assignment_ind_black_24dp"
                        android:ems="7"
                        android:hint="@string/e_mail_tv_login"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/backgroundColor"
                        android:textSize="16sp"
                        android:theme="@style/AppTheme" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_pass"
                    style="@style/TextLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/log_in_pass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="6dp"
                        android:drawableRight="@drawable/ic_lock_black_24dp"

                        android:ems="7"
                        android:hint="@string/pass_tv_login"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:theme="@style/AppTheme" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/textView_login_autorizationFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/login_btn"
                android:textColor="#212121"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:text="@string/login_with" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@+id/fb"
                    android:src="@drawable/g_plus"
                    android:visibility="visible" />

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/fb_f"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/fb"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/fb_c" />

                <ImageView
                    android:id="@+id/vk"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@+id/plus"
                    android:src="@drawable/vk"
                    android:visibility="visible" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/circle"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="90dp"
            android:alpha="0.3"
            android:background="@drawable/circle"
            android:visibility="invisible" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/textView_registration_autorizationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/forgot_the"
            android:textColor="@color/textColorHint" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/pass_login_tv"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_vopros"
            android:textColor="@color/textColorHint" />
    </LinearLayout>

</LinearLayout>