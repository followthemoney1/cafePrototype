<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></include>
    </android.support.design.widget.AppBarLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/backgroundColor"
        android:fillViewport="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/r_l"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <LinearLayout
                    android:id="@+id/r_emeil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="4dp"
                        android:text="@string/e_mail_tv"
                        android:textColor="@color/textColorLabel" />

                    <EditText
                        android:id="@+id/editText_email_registrationAct"
                        style="@style/EditTextColorCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorAccent"
                        android:ems="10"
                        android:hint="@string/e_mail"
                        android:inputType="textPersonName"
                        android:textColor="@color/textColorLabel"
                        android:textColorHint="@color/textColorHint"
                        android:textCursorDrawable="@null" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r_emeil"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="4dp"
                        android:text="Ваше имя"
                        android:textColor="@color/textColorLabel" />

                    <EditText
                        android:id="@+id/editText_firstname_registrationAct"
                        style="@style/EditTextColorCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorAccent"

                        android:ems="10"
                        android:hint="@string/first_name"
                        android:inputType="textPersonName"
                        android:textColor="@color/textColorLabel"
                        android:textColorHint="@color/textColorHint"
                        android:textCursorDrawable="@null"
                        android:textIsSelectable="true" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r_fname"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="4dp"
                        android:text="@string/last_name_tv"
                        android:textColor="@color/textColorLabel" />

                    <EditText
                        android:id="@+id/editText_lastname_registrationAct"
                        style="@style/EditTextColorCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorAccent"
                        android:ems="10"
                        android:hint="@string/last_name"
                        android:inputType="textPersonName"
                        android:textColor="@color/textColorLabel"
                        android:textColorHint="@color/textColorHint"
                        android:textCursorDrawable="@null" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r_lname"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="4dp"
                        android:text="@string/number_tv"
                        android:textColor="@color/textColorLabel" />

                    <EditText
                        android:id="@+id/editText_phone_registrationAct"
                        style="@style/EditTextColorCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorAccent"
                        android:ems="10"
                        android:hint="@string/_you_tel"
                        android:inputType="phone"
                        android:textColor="@color/textColorLabel"
                        android:textColorHint="@color/textColorHint"
                        android:textCursorDrawable="@null" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r_changepass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r_phone"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@color/lineColornumbers"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="14dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="4dp"
                        android:text="@string/change_pass_tv"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

            </RelativeLayout>


            <FrameLayout
                android:id="@+id/registration_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorAccent"
                android:foregroundGravity="bottom">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:text="@string/save_btn"
                    android:textColor="@color/backgroundColor"
                    android:textStyle="bold" />
            </FrameLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
